<span class="image">
    <img src="{{iconUrl}}"/>
</span>
<h1 title="{{name}}">{{name}}</h1>

<div class="item_metadata">
    {{#if frequency}}
        <span class="frequency"><strong>{{frequency}}</strong></span>
    {{/if}}

    {{#if nextRun}}
        <span class="next_run">
            <strong>{{t "job.next_run"}}:</strong>
            {{displayTimestamp nextRun}}
        </span>
    {{/if}}

    <span class="last_run">
        <strong>{{t "job.last_run"}}:</strong>
        {{#if lastRun}}
            <a class="last_run_date" href="#" title="{{t 'job.show_details.tip'}}">{{displayTimestamp lastRun}}. {{t lastRunStatusKey}}</a>
        {{else}}
            {{t job.last_run_no_last_run}}
        {{/if}}
    </span>

    <span class="owner pull-right">
        <strong>{{t "job.owner"}}: </strong>
        <a href='{{ownerUrl}}'>{{ownerName}}</a>
    </span>
</div>